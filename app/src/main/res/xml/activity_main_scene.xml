<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <!-- Переход между состояниями от старта к финишу-->
    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:transitionEasing="linear"
        motion:duration="1250">
       <KeyFrameSet>
           <!-- Задание траектории движения птицы-->
           <KeyPosition
               motion:motionTarget="@+id/ball"
               motion:framePosition="49"
               motion:keyPositionType="pathRelative"
               motion:percentX="0.5"
               motion:percentY="0.14" />
           <!-- Задание траектории движения облака-->
           <!-- framePosition - отсчёт времени в процентах-->
           <!-- scaleX, scaleY - размеры изображения-->
           <!-- alpha - видимость-->
       </KeyFrameSet>
    </Transition>
    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/newStart"
        motion:constraintSetStart="@id/end"
        motion:transitionEasing="linear"
        motion:duration="1500">
    </Transition>
    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/start"
        motion:constraintSetStart="@id/newStart"
        motion:transitionEasing="linear"
        motion:duration="2000">
    </Transition>
    <!-- Настройки описания состояния экрана старта-->
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:id="@+id/ball"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="576dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:transitionEasing="linear" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/newStart">
        <!-- Финиш рисунка птицы-->
        <Constraint android:id="@+id/ball">
            <Layout
                android:layout_width="100dp"
                android:layout_height="100dp"
                motion:layout_constraintLeft_toLeftOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"/>
        </Constraint>
    </ConstraintSet>

    <!-- Настройки описания состояния экрана финиша-->
    <ConstraintSet android:id="@+id/end">
        <!-- Финиш рисунка птицы-->
        <Constraint android:id="@+id/ball">
            <Layout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                motion:layout_constraintTop_toTopOf="parent"/>
        </Constraint>
    </ConstraintSet>
</MotionScene>